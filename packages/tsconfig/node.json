{
   "$schema": "https://json.schemastore.org/tsconfig",
   "display": "Node",
   "extends": "./base.json",
   "compilerOptions": {
      "module": "CommonJS",
      "target": "ES6",
      "lib": [
         "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "incremental": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "isolatedModules": true
   }
}