{
	"extends": "tsconfig/node.json",
	"include": ["src"],
	"exclude": ["node_modules", "scripts/**","**/*.test.*", "**/__mocks__/*", "**/__tests__/*"],
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
      "noEmit": false,
      "baseUrl": "./src",
      "paths": {
         "@/*": ["*"],
      },
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "types": ["node", "jest"],
	},
}
